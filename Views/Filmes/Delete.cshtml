@model Cinema.Models.Filme

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluindo</h1>

<h3>Você quer mesmo excluir?</h3>
<div>
    <h4>Filme</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeFilme)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeFilme)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaFilme)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaFilme)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sinopse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sinopse)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FilmeId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Voltar</a>
    </form>
</div>
