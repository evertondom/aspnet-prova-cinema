@model Cinema.Models.Cine

@{
    ViewData["Title"] = "Atualizar";
}

<h1>Atualizando</h1>

<h4>Cinema</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CinemaId" />
            <div class="form-group">
                <label asp-for="LocalCinema" class="control-label"></label>
                <input asp-for="LocalCinema" class="form-control" />
                <span asp-validation-for="LocalCinema" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
